{
  "name": "inhabit-widget-info-chrome",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArkadiumInc/inhabit-widget-info-chrome.git"
  },
  "scripts": {
    "start": "concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "clean": "rimraf zip",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "typings": "typings",
    "postinstall": "typings install",
    "build": "npm run tsc",
    "build_prod": "npm run clean && mkdirp ./zip ./zip/page_scripts ./zip/libs && webpack --progress --colors -p",
    "minify": "uglifyjs zip/*.js --screw-ie8 --compress --mangle --output zip/*.min.js"
  },
  "license": "MIT",
  "dependencies": {
    "@types/lodash": "^4.14.40",
    "angular2": "2.0.0-beta.17",
    "lodash": "^4.17.2",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.22",
    "zone.js": "^0.6.12sta"
  },
  "devDependencies": {
    "@types/chrome": "0.0.35",
    "@types/filesystem": "0.0.28",
    "@types/webrtc": "0.0.21",
    "concurrently": "^2.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "install": "^0.8.2",
    "lite-server": "^2.1.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "ts-loader": "^1.3.0",
    "typescript": "^2.0.0",
    "typings": "^0.6.8",
    "webpack": "^1.13.3"
  }
}
